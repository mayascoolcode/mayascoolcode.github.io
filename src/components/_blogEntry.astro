---
interface Props {
  blogTitle: string;
  blogDate: string;
}
const { blogTitle, blogDate } = Astro.props;
---
<div class="blogEntry border border-bean text-bean bg-champagne">
	<div class="blogTitle border-b border-bean">
        <h3>{blogTitle}</h3>
        <small>{blogDate}</small>
    </div>
    <div class="blogContent">
		<p><slot /></p>
    </div>
</div>

<style>
	.blogEntry {
		padding: 1rem;
	}
	.blogTitle {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin-bottom: 1rem;
	}
	.blogContent {
	}
</style>